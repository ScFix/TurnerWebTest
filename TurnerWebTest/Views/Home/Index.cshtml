<div class="bs-doc-header">
	<div class="container body-content">
		<h1>{{search.title}}</h1>
		<p class="lead">Find out about the classical movies and look at the fascinating facts that you will thourghly enjoy!</p>
	</div>
</div>
<div class="container body-content">
	<div class="row">
		<form class="form-group">
			<div class="form-group">
				<div class="col-xs-8 col-xs-offset-1">
					<input class="form-control input-lg" type="text" placeholder="Search" ng-model="search.searchString" on-key-enter="search.newSearch()">
				</div>
				<button class="btn btn-primary btn-lg col-xs-2" type="button" ng-click="search.newSearch()">Go!</button>
			</div>
		</form>
	</div>

	<div class="row">
		<div ng-repeat="item in search.items">
			<h3>{{item.Title}}</h3>
		</div>
	</div>
	<div class="row" ng-show="search.loadLimit > search.items.length">
		<form class="form-group">
			<button class="btn btn-primary btn-lg col-xs-offset-4 col-xs-2 btn-success" type="button" ng-click="search.loadMore()">More!</button>
		</form>
	</div>
</div>